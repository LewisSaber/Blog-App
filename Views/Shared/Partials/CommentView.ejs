<div class="row">
    <div class="col-2 font-weight-bold"
         style="font-size: 1.7rem"><%= comment.author.name || comment.author.email %></div>
    <div style="font-size: 1.3rem" class="font-italic">   <%= comment.date.toLocaleDateString('en-us', {
            year: "numeric",
            month: "long",
            day: "numeric"
        }) %></div>
    <div class="col-12" style="font-size: 1.5rem"><%= comment.text %></div>

</div>