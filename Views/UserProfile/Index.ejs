<div class="row">
    <%- include("Navigation") %>

    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <% if (!user?.model.name) { %>
                            <h4><%= user?.model.email %></h4>
                        <% } else { %>
                            <h4><%= user?.model.name %></h4>
                        <% } %>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group row">
                            <label for="name" class="col-4 col-form-label">Name</label>
                            <div class="col-8">
                                <p class="font-weight-normal"><%= user?.model.name %></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-4 col-form-label">Email</label>
                            <div class="col-8">
                                <p class="font-weight-normal"><%= user?.model.email %></p>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <a href="/UserProfile/Edit/" class="btn btn-dark btn-block">Edit </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/UserProfile/ChangePassword/" class="btn btn-dark btn-block">Change
                            Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>