<div class="row">
    <%- include("Navigation") %>

    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <form action="/UserProfile/Edit/" method="POST">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group row">
                                <label for="Name" class="col-4 col-form-label">Name</label>
                                <div class="col-8">
                                    <input type="text" id="Name" name="name"
                                           value="<%= user?.model.name %>" class="form-control mb-2"
                                           placeholder="Name"
                                           required/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Email" class="col-4 col-form-label">Email</label>
                                <div class="col-8">
                                    <input type="text" id="Email" name="email"
                                           value="<%= user?.model.email %>" class="form-control mb-2"
                                           placeholder="Login"
                                           required/>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info btn-block">Save</button>
                        </div>
                        <div class="col-md-2">
                            <a href="/UserProfile/Index/" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>