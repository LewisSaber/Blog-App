<div class="row">
    <%- include("Navigation") %>

    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">

                <form action="/UserProfile/ChangePassword/" method="POST">
                    <div class="form-group row">
                        <label for="currentPassword" class="col-4 col-form-label">Current Password</label>
                        <div class="col-8">
                            <input type="password" id="currentPassword" name="currentPassword" class="form-control mb-2"
                                   required/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="newPassword" class="col-4 col-form-label">New Password</label>
                        <div class="col-8">
                            <input type="password" id="newPassword" name="newPassword" class="form-control mb-2"
                                   required/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="confirmNewPassword" class="col-4 col-form-label">Confirm New Password</label>
                        <div class="col-8">
                            <input type="password" id="confirmNewPassword" name="confirmNewPassword"
                                   class="form-control mb-2" required/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info btn-block">Save</button>
                        </div>
                        <div class="col-md-2">
                            <a href="/UserProfile/Index" class="btn btn-info btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>